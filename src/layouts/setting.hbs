<!doctype html>
<html lang="{{default siteConfig.lang 'en'}}" class="no-js">
<head>
	<meta charset="utf-8">
	<title>{{default title page.basename}} :: {{siteConfig.title}}</title>
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/assets/styles/all.css?v={{now "%d%H%M%S"}}">
	<script src="/assets/javascripts/core.js"></script>
</head>
<body class="page page-{{page.basename}} sticky-layout">
<div class="sticky-layout__wrap">
	<div class="sticky-layout__content">
		<!-- header -->
		{{> header}}
		<!-- /header -->

		<!-- page content -->
		{{> body}}
		<!-- /page content -->
	</div>
</div>
<div class="sticky-layout__footer">
	<!-- footer -->
	{{> footer}}
	<!-- /footer -->
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
<script src="/assets/javascripts/{{#if production}}all.min.js{{else}}all.js{{/if}}?v={{now "%d%H%M%S"}}"></script>

</body>
</html>